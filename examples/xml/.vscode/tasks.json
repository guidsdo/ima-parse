{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Typescript watch",
      "type": "npm",
      "script": "ts:watch",
      "isBackground": true,
      "problemMatcher": "$tsc-watch",
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "label": "Typescript build",
      "type": "npm",
      "script": "build",
      "isBackground": false,
      "problemMatcher": "$tsc",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "runOptions": {
        "runOn": "default"
      }
    }
  ]
}
