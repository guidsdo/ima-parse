{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "module": "Node16",
    "moduleResolution": "node16",
    "strict": true,
    "noEmitOnError": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "newLine": "LF",
    "outDir": "dist/",
    "sourceMap": true,
    "declaration": true,
    "target": "ES2022",
    "lib": ["ES2022"],
    "types": ["node", "jest"]
  },
  "include": ["src"]
}
